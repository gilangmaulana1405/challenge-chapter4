 <div class="row">
     <h3>Add New Car</h3>
     <div class="col-8 mt-4">
         <form action="/cars" method="post" enctype="multipart/form-data">
             <div class="mb-3 row">
                 <label for="inputNama" class="col-sm-3 col-form-label">Nama*</label>
                 <div class="col-sm-6">
                     <input type="text" class="form-control" name="nama" placeholder="Cth: Honda Jazz CVT" required>
                 </div>
             </div>
             <div class="mb-3 row">
                 <label for="inputSewa" class="col-sm-3 col-form-label">Sewa Per Hari*</label>
                 <div class="col-sm-6">
                     <input type="number" class="form-control" name="harga_sewa" placeholder="Rp.-" required>
                 </div>
             </div>
             <div class="mb-3 row">
                 <label for="inputUkuran" class="col-sm-3 col-form-label">Ukuran*</label>
                 <div class="col-sm-6">
                     <select class="form-select" name="ukuran">
                         <option value="Small">Small</option>
                         <option value="Medium">Medium</option>
                         <option value="Large">Large</option>
                     </select>
                 </div>
             </div>
             <div class="mb-3 row">
                 <label for="inputSewa" class="col-sm-3 col-form-label">Foto*</label>
                 <div class="col-sm-6">
                     <div class="input-group mb-3">
                         <input type="file" name="foto" class="form-control" required>
                         <span class="input-group-text" id="basic-addon2"><i class="bi bi-upload"></i></span>
                     </div>
                 </div>
             </div>
             <a href="/cars" class="btn btn-outline-primary btn-add-cancel">Cancel</a>
             <button class="btn btn-primary btn-add-save" type="submit">Save</button>
         </form>
     </div>
 </div>